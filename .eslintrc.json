{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "indent": [
      "error",
      "tab",
      {
        "ignoredNodes": ["TemplateLiteral"]
      }
    ],
    "linebreak-style": 0,
    "semi": ["error", "never"],
    "template-curly-spacing": "off"
  }
}
